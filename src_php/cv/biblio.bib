  KEYWORDS = {Formalisme visuel ; Mod{\'e}lisation 3D ; R{\'e}alit{\'e} virtuelle ; Environnement arch{\'e}ologique},
  PDF = {https://hal-inrap.archives-ouvertes.fr/hal-02092409/file/Barreau_SST3_Inrap_2018_env_archeo_virtuels.pdf},
  HAL_ID = {hal-02092409},

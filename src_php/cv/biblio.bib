keywords = {<span class="fr">Reconstitution en 3D, art outsider, réalité virtuelle, machine CNC, sculpture en granite</span><span class="en">3D reconstitution, Outsider art, Virtual reality, CNC machine, granite sculpture</span>}
}

@article{BARREAU2023104177,
title = {Some new knowledge brought by 3D digitizations of the chapel of Kerfons (Brittany)},
